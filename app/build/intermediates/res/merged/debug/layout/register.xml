
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.hammerandtongues.online.hntonline.Registration">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/input_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/defaultpadding20"
                    android:paddingRight="@dimen/defaultpadding20"
                    android:paddingTop="@dimen/activity_horizontal_margin">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/logo"/>



                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:id="@+id/addressdetails"
                        android:paddingTop="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/imageView"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Please enter your mobile number including your country code. An sms will be sent to you to verify your number."
                            />
                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/activity_horizontal_margin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            >

                        <Spinner
                            android:id="@+id/codespinner"
                            android:layout_width="wrap_content"
                            android:layout_height="41dp"
                            android:dropDownWidth="200dp"
                            android:entries="@array/code_arrays"/>

                        <EditText
                            android:id="@+id/telephone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/roundcorner"
                            android:hint="Mobile number"
                            android:inputType="phone"
                            android:padding="15dp"
                            android:maxLength="14"/>

                    </LinearLayout>

</LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:id="@+id/codedetails"
                        android:paddingTop="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/imageView"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter the code sent to you in the box below"
                            android:textColor="@color/colorAmber"
                            />
                        <EditText
                            android:id="@+id/code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/roundcorner"
                            android:hint="Enter code"
                            android:inputType="number"
                            android:padding="15dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/personaldetails"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical"
                        android:layout_below="@+id/imageView"
                        android:paddingTop="@dimen/activity_horizontal_margin"
                        android:visibility="gone"
                        >

                        <EditText
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/roundcorner"
                            android:hint="username"
                            android:padding="15dp" />

                        <EditText
                            android:id="@+id/useremail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/roundcorner"
                            android:hint="email"
                            android:padding="15dp" />


                            <EditText
                                android:id="@+id/first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/roundcorner"
                                android:hint="First name"
                                android:padding="15dp" />

                            <EditText
                                android:id="@+id/surname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/roundcorner"
                                android:hint="Last name"
                                android:padding="15dp" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/password_login"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/roundcorner"
                                android:hint="password"
                                android:inputType="textPassword"
                                android:padding="15dp"
                                android:paddingTop="@dimen/defaultpadding20" />

                            <EditText
                                android:id="@+id/password_confrim"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/roundcorner"
                                android:hint="re-type password"
                                android:inputType="textPassword"
                                android:padding="15dp" />

                        </LinearLayout>


                    </LinearLayout>





                        <Button
                            android:id="@+id/register"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/default_rounded"
                            android:padding="15dp"
                            android:text="VERIFY NUMBER"
                            android:textColor="#ecf0f1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/colorAmber"
                            android:id="@+id/txtnocode"
                            android:text="Didn't get your code?"
                            android:visibility="gone"/>


                        <Button
                            android:id="@+id/resendcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/default_rounded"
                            android:padding="15dp"
                            android:text="RESEND CODE"
                            android:textColor="#ecf0f1"
                            android:visibility="gone"/>


                        <Button
                            android:id="@+id/editnum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/default_rounded"
                            android:padding="15dp"
                            android:text="CHANGE MY NUMBER"
                            android:visibility="gone"
                            android:textColor="#ecf0f1" />


                </LinearLayout>
            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>
